<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoRestaurante"
    android:background="@drawable/fondoampliando">

    <TextView
        android:id="@+id/NombreAmpliando2"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:text="Con Tradicion-Restaurante"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />
    <TextView
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:text="Con Tradicion-Restaurante"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        />

    <ImageView
        android:id="@+id/imgampliandorestaurante"
        android:layout_width="404dp"
        android:layout_height="256dp"
        android:src="@drawable/restaurante2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:id="@+id/precioampliandorestaurante"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="$ 20.000-150.000 COP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgampliandorestaurante"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/telefonoampliandorestaurante"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="$ tel: 344 511 5687"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioampliandorestaurante"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.1"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/loremampliandorestaurante"
        android:layout_width="350dp"
        android:layout_height="168dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam sit amet justo hendrerit massa consequat ultricies a sit amet ligula. Vivamus a metus at leo lobortis aliquam at et nisi. Aliquam pharetra ligula eget odio faucibus luctus. Praesent luctus augue ut urna pretium, a congue nisi vehicula. In placerat, massa ut bibendum convallis, lectus ipsum molestie ante, ac luctus tortor enim et magna."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoampliandorestaurante"
        app:layout_constraintVertical_bias="0.1"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/hotelvermas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginEnd="4dp"
        android:text="Reserva"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loremampliandorestaurante"
        app:layout_constraintVertical_bias="0.272" />

</androidx.constraintlayout.widget.ConstraintLayout>