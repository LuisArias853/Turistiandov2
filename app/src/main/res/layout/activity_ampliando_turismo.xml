<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoTurismo"
    android:background="@drawable/fondoampliando">

    <TextView
        android:id="@+id/NombreAmpliando3"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Museo principal"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />


    <ImageView
        android:id="@+id/imgampliandositios"
        android:layout_width="171dp"
        android:layout_height="181dp"
        android:src="@drawable/lugarlista1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218" />

    <ImageView
        android:id="@+id/imgampliandositios2"
        android:layout_width="172dp"
        android:layout_height="163dp"
        android:src="@drawable/lugarlista1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />

    <TextView
        android:id="@+id/precioampliandositios"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Visita Gratis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgampliandositios"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/telefonoampliandositios"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="$ tel: 344 511 5687"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioampliandositios"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.1"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/loremampliandositios"
        android:layout_width="354dp"
        android:layout_height="107dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam sit amet justo hendrerit massa consequat ultricies a sit amet ligula. Vivamus a metus at leo lobortis aliquam at et nisi. Aliquam pharetra ligula eget odio faucibus luctus. Praesent luctus augue ut urna pretium, a congue nisi vehicula. In placerat, massa ut bibendum convallis, lectus ipsum molestie ante, ac luctus tortor enim et magna."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoampliandositios"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/calificacionampliandoturismo"
        android:layout_width="354dp"
        android:layout_height="59dp"
        android:text="Calificacion = 1/5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoampliandositios"
        app:layout_constraintVertical_bias="0.7" />


    <Button
        android:id="@+id/reservasitio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginEnd="4dp"
        android:text="Reserva"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loremampliandositios"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>