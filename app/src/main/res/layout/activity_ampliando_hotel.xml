<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoHotel"
    android:background="@drawable/fondoampliando">


    <TextView
        android:id="@+id/NombreAmpliando1"
        android:layout_width="282dp"
        android:layout_height="53dp"
        android:text="Hotel Cannua Lodge"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ImageView
        android:id="@+id/imgampliandohotel"
        android:layout_width="165dp"
        android:layout_height="163dp"
        android:src="@drawable/hotellista4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/imgampliandohotel2"
        android:layout_width="176dp"
        android:layout_height="146dp"
        android:src="@drawable/compl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/precioampliandohotel"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="$ 60.000 COP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgampliandohotel"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/telefonoampliandohotel"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="$ tel: 344 511 5687"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioampliandohotel"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.1"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/loremampliandohotel"
        android:layout_width="349dp"
        android:layout_height="103dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam sit amet justo hendrerit massa consequat ultricies a sit amet ligula. Vivamus a metus at leo lobortis aliquam at et nisi. Aliquam pharetra ligula eget odio faucibus luctus. Praesent luctus augue ut urna pretium, a congue nisi vehicula. In placerat, massa ut bibendum convallis, lectus ipsum molestie ante, ac luctus tortor enim et magna."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoampliandohotel"
        app:layout_constraintVertical_bias="0.1" />
    <TextView
        android:id="@+id/calificacionampliandohotel"
        android:layout_width="354dp"
        android:layout_height="59dp"
        android:text="Calificacion = 1/5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoampliandohotel"
        app:layout_constraintVertical_bias="0.7" />


    <Button
        android:id="@+id/hotelvermas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginEnd="4dp"
        android:text="Reserva"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loremampliandohotel"
        app:layout_constraintVertical_bias="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>